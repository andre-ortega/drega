            <form id="form" action="https://formsubmit.co/92cfb8c52a1f0ac7539f4187a22e5f1a"  method="post">
                <!-- Honeypot -->
                <input type="text" name="_honey" style="display: none;">
                <!-- Disable Captcha -->
                <input type="hidden" name="_captcha" value="false">
                <!-- Redirect success page -->
                <input type="hidden" name="_next" value="https://www.drega.dev/success">

                <div class="nameDivContainer">

                    <div class="nameDiv">
                        <label for="firstName">first</label>
                        <input type="text" name="name" value="" id="firstName" required>
                    </div>

