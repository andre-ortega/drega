                <input type="email" name="email" value="" id="email" required>

                <label for="message">message</label>
                <textarea id="message" name="" placeholder="..." class="form-control" rows="10" required></textarea>

                <div id="buttons">
                    <button id="send" type="submit">send</button>
                    <button id="cancel" type="" id="cancel">cancel</button>
                </div>
                
            </form>
